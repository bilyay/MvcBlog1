@model MvcBlog.Areas.Admin.Models.DTO.CategoryVM
<div class="row">
    <!-- left column -->
    <div class="col-md-6">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Kategori İşlemi</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            @using (Html.BeginForm())
            {
                <div class="box-body">
                    <div class="form-group">
                        @Html.LabelFor(x => x.Name, new { @class = "exampleInputEmail1" })
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Kategori Adı" })
                        @Html.ValidationMessageFor(x => x.Name)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Description, new { @class = "exampleInputEmail1" })
                        @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @placeholder = "Açıklama" })

                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            }
        </div>
    </div>
</div>
