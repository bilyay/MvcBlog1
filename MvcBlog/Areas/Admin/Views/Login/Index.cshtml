    <body>
        <!-- Top line begins -->
        <div id="top">
            <div class="wrapper">
                <a href="#" title="" class="logo"><img src="~/Areas/Admin/Content/images/logo.png" alt="" /></a>

                <!-- Right top nav -->
                <div class="topNav">
                    <ul class="userNav">
                        <li><a href="#" title="" class="screen"></a></li>
                        <li><a href="#" title="" class="settings"></a></li>
                        <li><a href="#" title="" class="logout"></a></li>
                    </ul>
                </div>
                <div class="clear"></div>
            </div>
        </div>
        <!-- Top line ends -->
        <!-- Login wrapper begins -->
        <div class="loginWrapper">
            <!-- Current user form -->
            @using (Html.BeginForm("Index", "Login" ))
            {
                <div class="loginPic">
                  <img src="~/Areas/Admin/Content/images/userLogin2.png" alt="" />
                    <span>Kullanıcı Girişi</span>
                  
                </div>
                @Html.TextBoxFor(x => x.Email, new { @class = "loginEmail", @placeholder = "Email"})
                @Html.ValidationMessageFor(x=>x.Email)
                @Html.TextBoxFor(x => x.Password, new { @class = "loginPassword", @placeholder = "Parola" })
                @Html.ValidationMessageFor(x => x.Password)
                <div class="logControl">
                    <div class="memory"><input type="checkbox" checked="checked" class="check" id="remember1" /><label for="remember1">Beni Hatırla</label></div>
                    <input type="submit" name="submit" value="Login" class="buttonM bBlue" />
                    <div class="clear"></div>
                </div>
            }
         
            
        </div>
        <!-- Login wrapper ends -->
    </body>
